{
  "name": "forms-api",
  "version": "1.0.0",
  "description": "Machine-to-machine interface for downloading form submissions",
  "repository": "git@github.com:cds-snc/forms-api.git",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node build/server.js",
    "dev": "nodemon",
    "test": "vitest run",
    "lint": "biome lint --write .",
    "lint:check": "biome lint --error-on-warnings .",
    "format": "biome format --write .",
    "format:check": "biome format ."
  },
  "nodemonConfig": {
    "watch": [
      "src",
      ".env"
    ],
    "exec": "tsx src/server.ts",
    "ext": "*"
  },
  "keywords": [],
  "author": "Canadian Digital Service",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.629.0",
    "@aws-sdk/client-secrets-manager": "^3.637.0",
    "@aws-sdk/lib-dynamodb": "^3.629.0",
    "axios": "^1.7.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jose": "^5.6.3",
    "pg-promise": "^11.9.1"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.609.0",
    "@biomejs/biome": "^1.8.3",
    "@types/express": "^4.17.21",
    "@types/node": "^22.1.0",
    "@types/supertest": "^6.0.2",
    "aws-sdk-client-mock": "^4.0.1",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5"
  },
  "packageManager": "pnpm@9.6.0"
}
