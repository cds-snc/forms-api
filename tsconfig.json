{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "baseUrl": "./",
    "paths": {
      "@config": ["src/config.ts"],
      "@lib/*": ["src/lib/*"],
      "@middleware/*": ["src/middleware/*"],
      "@operations/*": ["src/operations/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src/**/*", "test/**/*", "utils/**/*"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
